{
  "compilerOptions": {
    "strict": true,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2015",
    "jsx": "react",
    "skipLibCheck": true,
    "lib": [ "es5", "es2015", "dom", "ES2021.String" ],
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "compileOnSave": false,
  "ts-node": {
      "compilerOptions": {
          "module": "commonjs",
          "moduleResolution": "node",
          "esModuleInterop": true,
          "allowSyntheticDefaultImports": true,
          "skipLibCheck": true
      }
  }
}
